<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oblique.appsearch.search">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Search App"
        android:roundIcon="@drawable/search_logo"
        android:supportsRtl="true">
        <receiver android:name=".MainActivity$switchButtonListener" />

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".AppListWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/app_list_widget_info" />
        </receiver>

        <receiver android:name=".DarkAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/dark_app_widget_info" />
        </receiver>
    </application>

</manifest>